{
    "name": "@flareapp/ignition",
    "version": "0.0.1",
    "scripts": {
        "bundle": "microbundle -i resources/js/index.tsx -o resources/compiled/ignition.js --jsx React.createElement --jsxFragment React.Fragment -f cjs --no-sourcemap --external none --define process.env.NODE_ENV='production'",
        "dev": "NODE_ENV=development TAILWIND_MODE=watch concurrently -n \"dev,typescript\" -c \",green\" \"microbundle watch -i resources/js/index.tsx -o resources/compiled/ignition.js --jsx React.createElement --jsxFragment React.Fragment -f cjs --no-sourcemap --external none --define process.env.NODE_ENV='development' --no-compress \" \"yarn typecheck\"",
        "format": "prettier --write 'resources/**/*.{css,js,ts,tsx}'",
        "typecheck": "tsc -w --preserveWatchOutput",
        "postinstall": "sed -i '' '/For example <script/d' ./node_modules/@fortawesome/fontawesome-svg-core/index.es.js; sed -i '' '/For example <script/d' ../node_modules/@fortawesome/fontawesome-svg-core/index.es.js; exit 0"
    },
    "dependencies": {
        "@flareapp/ignition-ui": "^3.0.0",
        "@fortawesome/fontawesome-svg-core": "^1.2.36",
        "@fortawesome/free-brands-svg-icons": "^5.15.4",
        "@fortawesome/free-solid-svg-icons": "^5.15.4",
        "@fortawesome/react-fontawesome": "^0.1.16",
        "@tailwindcss/line-clamp": "^0.3.0",
        "date-fns": "^2.21.3",
        "downshift": "^6.1.3",
        "git-url-parse": "^11.4.4",
        "lodash": "^4.17.21",
        "md5": "^2.3.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-intersection-observer": "^8.32.5",
        "react-markdown": "^5.0.0",
        "sql-formatter": "^4.0.2",
        "tailwindcss": "^3.0.13"
    },
    "devDependencies": {
        "@flareapp/flare-client": "^1.0.12",
        "@types/git-url-parse": "^9.0.0",
        "@types/jest": "^24.0.15",
        "@types/lodash": "^4.14.169",
        "@types/md5": "^2.3.0",
        "@types/react-dom": "^17.0.5",
        "autoprefixer": "^10.4.0",
        "concurrently": "^6.2.0",
        "cross-env": "^7.0.3",
        "husky": "^1.3.1",
        "lint-staged": "^11.0.0",
        "microbundle": "^0.13.0",
        "postcss": "^8.4.4",
        "postcss-easy-import": "^3.0.0",
        "postcss-import": "^14.0.2",
        "postcss-preset-env": "^6.7.0",
        "prettier": "^2.5.0",
        "tailwindcss": "^3.0.1",
        "typescript": "^4.2.4"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && yarn bundle && git add resources/compiled/ignition.js && git add resources/compiled/ignition.css"
        }
    }
}
